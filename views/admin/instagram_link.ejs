<%-include("navbar.ejs")%>

<form action="/admin/save_instagram_link" method="post" enctype="multipart/form-data">
<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="col-md-12">
            <h4>Add Instagram Link</h4>
        </div>
        <div class="col-md-6 mt-3">
            <label for="insta_link">Instagram Link</label>
            <input required type="url" class="form-control" name="insta_link" id="insta_link">
        </div>
        <div class="col-md-6 mt-3">
            <label for="insta_image">Instagram Image</label>
            <input required type="file" class="form-control" name="insta_image" id="insta_image">
        </div>
        <div class="col-md-12 mt-3 text-end">
            <button class="btn btn-primary">Save Instagram Links</button>
        </div>
    </div>
</div>
</form>

<div class="container-fluid mt-5 p-4 bg-white">
    <div class="row">
        <div class="col-md-12 mb-3">
            <h3>All Instagram Links</h3>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Sr. No</th>
                    <th>Link</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <% var sr = 1; for (var i of insta) { %>
                <tr>
                    <td>
                        <a href="/admin/edit_insta/<%-i.instagram_images_id%>">
                            <button class="btn btn-primary mt-1">
                                <i class="align-middle" data-feather="edit"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_insta/<%-i.instagram_images_id%>">
                            <button class="btn btn-danger mt-1">
                                <i class="align-middle" data-feather="trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%- sr++ %></td>
                    <td>
                        <% if( i.insta_link) { %>
                            <a href="<%- i.insta_link %>" target="_blank">Instagram Link</a>
                        <% } else { %>
                            <span>N/A</span>
                        <% } %>
                    </td>
                    <td>
                        <% if (i.insta_image) { %>
                        <img src="/uploads/<%- i.insta_image %>" class="border border-dark rounded" alt="insta Image" style="width: 80px; height: 80px;">
                        <% } else { %>
                        <span>No Image</span>
                        <% } %>
                    </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</div>

<%-include("footer.ejs")%>
