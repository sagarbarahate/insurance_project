<%- include("navbar.ejs") %>

<form action="/admin/update_team" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h4>Update Team Member</h4>
            </div>
            <!-- Team Member ID (Hidden) -->
            <input type="hidden" name="team_members_id" id="team_members_id" value="<%- team_info.team_members_id %>">

            <!-- Team Member Name -->
            <div class="col-md-6 mt-3">
                <label for="team_name">Name</label>
                <input required type="text" class="form-control" name="team_name" id="team_name" value="<%- team_info.team_name %>">
            </div>

             <!-- Team Member Image -->
             <div class="col-md-4 mt-3">
                <label for="team_image">Image</label>
                <input type="file" class="form-control" name="team_image" id="team_image">
            </div>
            <div class="col-md-2">
                <% if (team_info.team_image) { %>
                    <img src="/uploads/<%- team_info.team_image %>" alt="Team Member Image" style="width: 100px; height: 100px;" class=" border border-dark rounded">
                <% } %>
            </div>

            <!-- Team Member Position -->
            <div class="col-md-6 mt-3">
                <label for="team_position">Position</label>
                <input required type="text" class="form-control" name="team_position" id="team_position" value="<%- team_info.team_position %>">
            </div>

            <!-- Facebook Link -->
            <div class="col-md-6 mt-3">
                <label for="team_fb_link">Facebook Link</label>
                <input type="url" class="form-control" name="team_fb_link" id="team_fb_link" value="<%- team_info.team_fb_link %>">
            </div>

            <!-- Instagram Link -->
            <div class="col-md-6 mt-3">
                <label for="team_insta_link">Instagram Link</label>
                <input type="url" class="form-control" name="team_insta_link" id="team_insta_link" value="<%- team_info.team_insta_link %>">
            </div>

            <!-- Twitter Link -->
            <div class="col-md-6 mt-3">
                <label for="team_twitter_link">Twitter Link</label>
                <input type="url" class="form-control" name="team_twitter_link" id="team_twitter_link" value="<%- team_info.team_twitter_link %>">
            </div>

            <!-- LinkedIn Link -->
            <div class="col-md-6 mt-3">
                <label for="team_linkedin_link">LinkedIn Link</label>
                <input type="url" class="form-control" name="team_linkedin_link" id="team_linkedin_link" value="<%- team_info.team_linkedin_link %>">
            </div>

            <!-- Save Button -->
            <div class="col-md-12 mt-3 text-end">
                <button class="btn btn-primary" type="submit">Update Team Member</button>
            </div>
        </div>
    </div>
</form>

<%- include("footer.ejs") %>
