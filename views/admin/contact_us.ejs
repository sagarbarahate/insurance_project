<%-include("navbar.ejs")%>

<form action="/admin/update_contact_us" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h4>Contact Us</h4>
                <input value="<%-contact_us.contact_us_id%>" required type="hidden" class="form-control" name="contact_us_id" id="contact_us_id">
            </div>

            <!-- Contact Map Link -->
            <div class="col-md-6 mt-3">
                <label for="contact_map_link">Map Link</label>
                <input value="<%-contact_us.contact_map_link%>" type="url" class="form-control" name="contact_map_link" id="contact_map_link">
            </div>

             <!-- Contact Image -->
             <div class="col-md-3 mt-3">
                <label for="contact_img">Contact Image</label>
                <input type="file" class="form-control" name="contact_img" id="contact_img">
            </div>

            <!-- Display current image -->
            <div class="col-md-3 mt-3">
                <% if (contact_us.contact_img) { %>
                    <img src="/uploads/<%-contact_us.contact_img%>" alt="Contact Image" class="img-fluid border border-dark rounded" style="max-width: 100px;">
                <% } %>
            </div>


            <!-- Save Button -->
            <div class="col-md-12 mt-3 text-end">
                <button class="btn btn-primary" type="submit">Update Contact Us</button>
            </div>
        </div>
    </div>
</form>

<%-include("footer.ejs")%>
