<%-include("navbar.ejs")%>

<form action="/admin/update_faq" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h4 class="text-primary">Edit FAQs</h4>
                <input type="hidden" class="form-control" name="faq_id" id="faq_id" value="<%-faq_info.faq_id%>">
            </div>
            <div class="col-md-6 mt-3">
                <label for="faq_question">Question</label>
                <input type="text" class="form-control" value="<%-faq_info.faq_question%>" name="faq_question" id="faq_question">
            </div>
            <div class="col-md-6 mt-3">
                <label for="faq_answer">Answer</label>
                <input type="text" class="form-control" value="<%-faq_info.faq_answer%>" name="faq_answer" id="faq_answer">
            </div>
            <div class="col-md-12 mt-3 text-end">
                <button class="btn btn-primary">Update FAQs</button>
            </div>
        </div>
    </div>
    </form>
    

<%-include("footer.ejs")%>
                    